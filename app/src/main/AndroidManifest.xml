<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.willpower.player">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:theme="@style/AppTheme">
        <activity android:name=".RecordAudioActivity"/>
        <activity android:name=".PlayAudioActivity"/>
        <activity android:name=".SimplePlayVideoSurfaceViewActivity"/>
        <activity android:name=".SimplePlayVideoTextureViewActivity"/>
        <activity
            android:name=".PlayVideoActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>
    </application>
</manifest>